<xsl:stylesheet version="1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<xsl:param name="type"></xsl:param>
<xsl:variable name="type_val"><xsl:value-of select="$type"/></xsl:variable>
<xsl:output method="text"/>
<xsl:template match="/" name="main">
<xsl:choose>
  <xsl:when test="$type_val = 'spectrum_conv'">
    <xsl:for-each select="xmimsim-results/spectrum_conv/channel">
      <xsl:value-of select="energy"/>
      <xsl:text>,</xsl:text>
      <xsl:for-each select="counts">
        <xsl:value-of select="."/>
        <xsl:choose>
          <xsl:when test="position() = last()">
            <xsl:text>&#10;</xsl:text>
          </xsl:when>
          <xsl:otherwise>
            <xsl:text>,</xsl:text>
          </xsl:otherwise>
        </xsl:choose>
      </xsl:for-each>
    </xsl:for-each>
  </xsl:when>
  <xsl:when test="$type_val = 'spectrum_unconv'">
    <xsl:for-each select="xmimsim-results/spectrum_unconv/channel">
      <xsl:value-of select="energy"/>
      <xsl:text>,</xsl:text>
      <xsl:for-each select="counts">
        <xsl:value-of select="."/>
        <xsl:choose>
          <xsl:when test="position() = last()">
            <xsl:text>&#10;</xsl:text>
          </xsl:when>
          <xsl:otherwise>
            <xsl:text>,</xsl:text>
          </xsl:otherwise>
        </xsl:choose>
      </xsl:for-each>
    </xsl:for-each>
  </xsl:when>
</xsl:choose>
</xsl:template>
</xsl:stylesheet>
